<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_read_encrypted_message_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"

    app:cardBackgroundColor="@color/button_background"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">


    <com.ortiz.touchview.TouchImageView
        android:id="@+id/imageView_read_encrypted_message_dialog"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:adjustViewBounds="true"
        android:visibility="invisible"
        android:rotation="90"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_add_location_black_24dp" />
    <ImageView
        android:id="@+id/imageView_read_encrypted_message_dialog_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView_read_encrypted_message_dialog"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_speaker_notes_black_24dp" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView_read_encrypted_message_dialog_placeholder"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_read_encrypted_message_dialog_speech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView_read_encrypted_message_dialog_placeholder"
            app:srcCompat="@drawable/ic_speaker_notes_black_24dp" />

        <ImageView
            android:id="@+id/imageView_read_Encrypted_message_dialog_translate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            app:srcCompat="@drawable/ic_translate_black_24dp" />

    </LinearLayout>


</RelativeLayout>