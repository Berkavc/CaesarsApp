<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.Customize" >
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FeedActivityThemeDark">
        <item name="android:background">#C0C0C0</item>
    </style>

    <style name="NavigationTheme" parent="AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>


    <style name="background"  parent="AppTheme.NoActionBar">
        <!-- Customize your theme here. -->

    </style>

    <!-- Light base activity theme -->



    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight">

        <item name="windowActionBar">false</item>
        <item name="android:colorAccent">@color/silver_background</item>
        <item name="windowNoTitle">true</item>
        <item name="android:centerColor">@color/white</item>
        <item name="android:endColor">@color/silver</item>
        <item name="android:startColor">@color/silver</item>
        <item name="android:textColorAlertDialogListItem">@color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:titleTextColor">@color/silver_background</item>
        <item name="colorAccent">@color/silver_background</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog">
    <!--buttons color-->
        <item name="colorAccent">@android:color/white</item>
        <item name="android:colorAccent">@android:color/white</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@android:color/white</item>7
        <item name="android:titleTextColor">@android:color/white</item>
        <item name="android:textColorAlertDialogListItem">@android:color/white</item>
        <item name="textColorAlertDialogListItem">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:alertDialogTheme">@android:color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>


        <item name="android:listDividerAlertDialog">@color/white</item>
        <!--dialog background-->
        <item name="android:windowBackground">@drawable/background_dialog</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
